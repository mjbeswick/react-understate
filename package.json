{
  "name": "react-understate",
  "version": "1.0.11",
  "description": "A lightweight, reactive signals library for React 18+ with automatic dependency tracking and optimized performance",
  "type": "module",
  "main": "dist/react-understate.esm.js",
  "module": "dist/react-understate.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-understate.esm.js",
      "require": "./dist/react-understate.cjs.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/react-understate.signals.js",
      "require": "./dist/react-understate.signals.cjs.js"
    }
  },
  "scripts": {
    "build": "rollup -c && node scripts/build-size.ts",
    "build:watch": "rollup -c --watch",
    "build:analyze": "rollup -c && open bundle-analysis.html",
    "test": "jest",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky",
    "pre-commit": "npm run format && npm run type-check && npm test",
    "release": "npm version patch && npm publish && git push origin main && git push origin v$(node -p \"require('./package.json').version\")",
    "release:patch": "npm version patch && npm publish && git push origin main && git push origin v$(node -p \"require('./package.json').version\")",
    "release:minor": "npm version minor && npm publish && git push origin main && git push origin v$(node -p \"require('./package.json').version\")",
    "release:major": "npm version major && npm publish && git push origin main && git push origin v$(node -p \"require('./package.json').version\")"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "eslint-plugin/**/*.{js,ts}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "reactive",
    "signals",
    "computed",
    "state",
    "components",
    "typescript",
    "framework",
    "ui",
    "frontend",
    "web",
    "javascript",
    "library",
    "state-management",
    "reactive-programming",
    "functional-programming",
    "declarative",
    "modern",
    "lightweight",
    "fast",
    "performant"
  ],
  "author": "mjbeswick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjbeswick/react-understate.git"
  },
  "homepage": "https://github.com/mjbeswick/react-understate#readme",
  "bugs": {
    "url": "https://github.com/mjbeswick/react-understate/issues"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "@types/use-sync-external-store": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "use-sync-external-store": "^1.5.0"
  }
}
